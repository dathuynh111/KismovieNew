<%- include('./partials/header.ejs') %> <%- include('./partials/menu.ejs') %>
<section>
  <div class="row" style="padding-top: 100px">
    <div class="col-12">
      <h2 class="home__title mb-2">Phim 18+</h2>
    </div>

    <% listMovies.forEach(function(mv){ %>
      <div class="col-6 col-sm-4 col-lg-4 col-xl-3">
        <div class="card">
          <div class="card__cover">
            <img
              src="<%=mv.movieThumb.thumb%>"
              alt="<%-mv.title%> "
              class="rounded"
              loading="lazy"
            />
            <a href="/phim/<%-mv.slug%>/xem-phim" class="card__play">
              <i class="icon ion-ios-play"></i>
            </a>
          </div>
  
          <div class="card__content">
            <h4 class="card__title">
              <a href="/phim/<%-mv.slug%>/xem-phim" class="a__darkmode">
                <%= mv.title %>
              </a>
            </h4>
          </div>
        </div>
      </div>
  
      <% }); %>
    
    <%- include('./partials/paging-default.ejs') %> 
  </div>
</section>

