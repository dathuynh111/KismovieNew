<!-- header -->
<header class="header" id="app-search">
  <div class="header__wrap">
    <div class="row">
      <div class="col-12">
        <div class="header__content">
          <!-- header logo -->
          <a href="/" class="header__logo">
            <span class="text-red text-bold">KIS</span>Movie
          </a>
          <!-- end header logo -->

          <!-- header nav -->
          <ul class="header__nav">
            <!-- dropdown -->
            <li class="header__nav-item">
              <a class="header__nav-link" href="/">Trang chủ</a>
            </li>
            <!-- dropdown -->
            <li class="header__nav-item">
              <a class="dropdown-toggle header__nav-link" href="#" role="button" id="dropdownMenuCatalog"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Thể loại</a>

              <ul class="dropdown-menu header__dropdown-menu" aria-labelledby="dropdownMenuCatalog" id="menu-category">
                <% menu.genres.forEach(g => { %>
                <li>
                  <a class="text-capitalize"
                    href="/the-loai/<%-  JSON.parse(JSON.stringify(g))['categorySlug'] %>/page/1">
                    <%- JSON.parse(JSON.stringify(g))['category'] %>
                  </a>
                </li>
                <% }) %>
              </ul>
            </li>
            <!-- end dropdown -->
            <li class="header__nav-item">
              <a class="dropdown-toggle header__nav-link" href="#" role="button" id="dropdownMenuCatalog"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Năm</a>
              <ul class="dropdown-menu header__dropdown-menu menu-year" aria-labelledby="dropdownMenuMore">
                <% menu.years.forEach(year => { %>
                <li>
                  <a class="text-capitalize" href="/nam/<%-year %>/page/1">
                    <%- year %>
                  </a>
                </li>
                <% }) %>
              </ul>
            </li>
            <li class="header__nav-item">
              <a class="dropdown-toggle header__nav-link" href="#" role="button" id="dropdownMenuCatalog"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Quốc gia</a>
              <ul class="dropdown-menu header__dropdown-menu menu-region" aria-labelledby="dropdownMenuMore">
                <% menu.regions.forEach(region => { %>
                <li>
                  <a class="text-capitalize" href="/quoc-gia/<%-region.regionSlug %>/page/1">
                    <%- region.region %>
                  </a>
                </li>
                <% }) %>
              </ul>
            </li>
            <!-- <li class="header__nav-item">
                                <a class="header__nav-link" href="/phim-bo/page/1">Phim bộ</a>
                            </li> -->
            <!-- <li class="header__nav-item">
                                <a class="header__nav-link" href="/the-loai/pr/page/1">Phim việt</a>
                            </li> -->
          </ul>
          <!-- end header nav -->

          <!-- header auth -->

          <div class="display__label">
            <div class="header__auth">
              <button class="header__search-btn" type="button" @click="toggleSearch">
                <i class="icon ion-ios-search"></i>
              </button>
            </div>



            <div class="header__auth">
              <button class="header__btn" type="button">
                <span></span>
                <span></span>
                <span></span>
              </button>

            </div>

          </div>
          <a href="/be-admin/login">
            <img class="nav__avatar" src="https://i.pinimg.com/originals/d8/70/20/d87020c70b0bf5eec4918874fa7d0f9f.jpg"
              alt="" />
          </a>
        </div>
      </div>
    </div>
  </div>
  <!-- header search -->
  <form action="#" class="header__search">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="header__search-content">
            <input type="text" v-model="txtSearch" v-on:keyup="autoSearch" v-on:keyup.enter="gotoSearchPage"
              placeholder="Tìm kiếm phim ..." />
            <button type="button" @click="gotoSearchPage">Tìm kiếm</button>
          </div>
        </div>
      </div>
    </div>
    </div>
  </form>
  <!-- end header search -->
</header>
<!-- end header -->