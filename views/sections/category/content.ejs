<!-- page title -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section__wrap">
                    <!-- section title -->
                    <h2 class="home__title mb-2">Thể Loại: <span class="text-capitalize"><%-category %> </span></h2>
                    <!-- end section title -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end page title -->

<!-- catalog -->

<div class="row">
    <!-- end section title -->
    <% listMovies.forEach(function(mv){ %>
    <!-- card -->
    <div class="display">
        <div class="movies">
            <span class="rank"> <%- mv.score %> </span>
            <div class="front">
                <img src="<%=mv.movieThumb.thumb%>" alt="<%-mv.title%>" class="thumbnail" loading="lazy" />
                <h4><%= mv.title %></h4>
            </div>
            <div class="back">
                <div class="btn__container">
                    <div class="content__card">
                        <h4>OverView:</h4>
                        <p> <%-
                      mv.description.replace(/<\/?[^>]+(>|$)/g, "").trim().substr(0,
                      150)+'...'%> </p>
                    </div>

                    <div class="btn__imgcontainer">
                        <button class="btn__img">
                            <a href="/phim/<%= mv.slug %>">Xem thêm</a>
                        </button>
                    </div>

                </div>
            </div>


            <div class="background"></div>

        </div>




    </div>
    <!-- end card -->
    <% }); %>
    <%- include('../../partials/paging-default.ejs') %>
</div>

<!-- end catalog -->