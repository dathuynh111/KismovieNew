 <!-- Phim bộ -->
 <!-- data-bg="/img/section/section.jpg" -->
 <section class="home">
    <div class="container">
        <div class="row">
            <!-- section title -->
            <div class="col-12">
                <h2 class="home__title mb-2">Phim Bộ</h2>
            </div>
            <!-- end section title -->

             <!-- end section title -->
             <% seriaMovies.forEach(function(mv){ %>
                <% 
                    parts = mv.parts.toLowerCase().replace('tập','').replace('</strong>','')
                    parts = (parts == 0) ?  mv.movie_part_series.length :  parts;
                 %>
                <!-- card -->
                <div class="display">
                    <div class="movies">
                        <div class="front">
                            <span class="part-item"><%- mv.movie_part_series.length +"/"+parts %></span>
                            <img
                            src="<%=mv.movieThumb.thumb%>"
                            alt="<%-mv.title%>"
                            class="thumbnail"
                            loading="lazy"
                          />
                          <h4><%= mv.title %></h4>
                        </div>
                        <div class="back">
                            <div class="btn__container">
                                <button class="btn"">
                                    <a href="/phim/<%= mv.slug %>">Xem thêm</a>
                                </button>
                            </div>
                          </div>
                    </div>
                </div>
                <!-- end card -->
              <% }); %>

            <!-- section btn -->
            <div class="col-12">
                <a href="/phim-bo/page/1" class="section__btn">More</a>
            </div>
            <!-- end section btn -->
        </div>
    </div>
</section>
<!-- end  Phim việt-->