 <!-- Phim bộ -->
 <section">
     <div>
         <div class="row">
             <!-- section title -->
             <div class="col-12">
                 <h2 class="home__title mb-2">Phim Bộ</h2>
             </div>
             <% seriaMovies.slice(0,20).map(function(mv){ %>
             <!-- card -->
             <div class="col-6 col-sm-4 col-lg-4 col-xl-3">
             <div class="display">
                 <div class="movies">
                     <div class="front">
                         <img src="<%=mv.movieThumb.thumb%>" alt="<%-mv.title%>" class="thumbnail" loading="lazy" />
                         <h4><%= mv.title %></h4>
                     </div>
                     <div class="back">
                         <div class="btn__imgcontainer">
                             <button class="btn__img">
                                 <a href="/phim-bo/phim/<%= mv.slug %>">Xem thêm</a>
                             </button>
                         </div>
                     </div>

                     <div class="background"></div>
                 </div>
             </div>

             </div>
             <!-- end card -->
             <% }); %>

             <!-- section btn -->
             <div class="col-12">
                 <a href="/phim-bo/page/1" class="section__btn">More</a>
             </div>
             <!-- end section btn -->
         </div>
     </div>
     </section>
     <!-- end  Phim việt-->