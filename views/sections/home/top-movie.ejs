<!-- home -->

<div>
    <div class="row">
        <div class="col-12">
            <h2 class="home__title mb-2">Phim mới cập nhật</h2>
        </div>

        <% topMovies.slice(0,10).map(function(mv){ %>

            <!-- card -->
            <div class="display">
                <div class="movies">

                    <span class="rank"> <%- mv.score %> </span>
                    <div class="front">
                        <img src="<%=mv.movieThumb.thumb%>" alt="<%-mv.title%>" class="thumbnail" loading="lazy" />
                        <h4>
                            <%= mv.title %>
                        </h4>


                    </div>
                    <div class="back">
                        <div class="btn__container">

                            <div class="content__card">
                                <h4>OverView:</h4>
                                <p> <%-
                              mv.description.replace(/<\/?[^>]+(>|$)/g, "").trim().substr(0,
                              100)+'...'%> </p>
                            </div>

                            <div class="btn__imgcontainer">
                                <button class="btn__img" ">
                                    <a href="/phim/<%=mv.slug %>">Xem thêm</a>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="background"></div>
                </div>

            </div>

            <!-- end card -->
            <% }); %>

            <div class="col-12">
                <a href="/the-loai/phim-chieu-rap/page/1" class="section__btn">More</a>
            </div>
    </div>
</div>
<!-- end home -->